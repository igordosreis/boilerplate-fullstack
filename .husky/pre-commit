#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

if git diff-index --cached --exit-code HEAD -- "front-end"; then
  echo "No changes in front-end"
else
  echo "There are changes in front-end"
  (cd "front-end" && npx lint-staged)
fi

if git diff-index --cached --exit-code HEAD -- "back-end"; then
  echo "No changes in back-end"
else
  echo "There are changes in back-end"
  (cd "back-end" && npx lint-staged)
fi
