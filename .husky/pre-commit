#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

if git diff --cached HEAD -- "front-end"; then
  echo "No changes in the front-end"
else
  echo "There are changes in the front-end"
  (cd "front-end" && npx lint-staged --concurrent false)
fi

if git diff --cached HEAD -- "back-end"; then
  echo "No changes in the back-end"
else
  echo "There are changes in the back-end"
  (cd "back-end" && npx lint-staged --concurrent false)
fi
