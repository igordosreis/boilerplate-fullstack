#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

if git diff --cached HEAD -- front-end; then
  (cd front-end && npx lint-staged)
fi

if git diff --cached HEAD -- back-end; then
  (cd back-end && npx lint-staged)
fi


